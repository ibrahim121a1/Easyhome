<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Home_Fragment"
    android:id="@+id/Rl1"
    >


    <RelativeLayout
        android:id="@+id/Rl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/searchbar">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:src="@android:drawable/ic_search_category_default" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="51dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/imageView1"
            android:src="@drawable/ic_notification" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rl3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/Rl2"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="39dp"
            android:src="@drawable/furniture" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rl4"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_below="@id/Rl3">

        <ImageButton
            android:id="@+id/IB1"
            android:layout_width="55dp"
            android:layout_height="67dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="233dp"
            android:layout_marginTop="-8dp"
            android:background="@drawable/circle_btn"
            android:src="@drawable/electonics_btn" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="97dp"
            android:layout_height="53dp"
            android:layout_below="@id/IB1"
            android:layout_marginStart="215dp"
            android:layout_marginTop="3dp"
            android:text="@string/electronics_items"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            />



        <ImageButton
            android:id="@+id/IB2"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="136dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/circle_btn"
            android:src="@drawable/sanitary_btn" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="82dp"
            android:layout_height="41dp"
            android:layout_below="@id/IB2"
            android:layout_marginStart="125dp"
            android:layout_marginTop="5dp"
            android:text="@string/sanitary_wares"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/IB4"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="325dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/circle_btn"
            android:src="@drawable/tile_btn" />
        <TextView
            android:id="@+id/tv4"
            android:layout_width="97dp"
            android:layout_height="53dp"
            android:layout_below="@id/IB4"
            android:layout_marginStart="335dp"
            android:layout_marginTop="3dp"
            android:text="@string/tiles"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/Black"/>


        <ImageButton
            android:id="@+id/IB3"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/circle_btn"
            android:src="@drawable/light_btn" />
        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:text="@string/lights"
            android:layout_marginStart="25dp"
            android:layout_below="@id/IB3"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textColor="@color/Black"
            />


    </RelativeLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:id="@+id/R5"
         android:layout_below="@id/Rl4">

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:layout_alignParentTop="true"
             android:layout_alignParentEnd="true"
             android:layout_marginTop="0dp"
             android:layout_marginEnd="0dp"
             android:src="@drawable/offer" />

     </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/R5"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="31dp"
            android:src="@drawable/furniture" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Rl6"
        android:layout_below="@id/R5"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="205dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/new" />


    </RelativeLayout>
</RelativeLayout>